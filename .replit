modules = ["python-3.11", "nodejs-20", "postgresql-16", "python3"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python -m uvicorn app.server:app --host 0.0.0.0 --port $PORT"]
build = ["sh", "-c", "pip install -r requirements.txt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
